{% extends 'base.html.twig' %}

{% block title 'Mixtour' %}

{% block body %}
    <div class="jumbotron">Mon Historique</div>

    <ul>
    {% for match in matchs %}
        {{ dump(match) }}

        {% if not match.vainqueur_id %}
            <li style="background-color: grey">
                {{ match.id }} draw
            </li>
            {% elseif match.vainqueur_id == app.user.id %}
                <li style="background-color: green">
                    {{ match.id }} win
                </li>
            {% else %}
                <li style="background-color: red">
                    {{ match.id }}  loose
                </li>
        {% endif %}
    {% endfor %}
{% endblock %}