{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}
{% block stylesheets %}
    <link href="css/connexion.css" rel="stylesheet">
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
{% endblock %}
{% block body %}
    <section class="login-block">
        <div class="container">
            <div class="row">
                <div class="col-md-4 login-sec">
                    <h2 class="text-center">Connectez-vous</h2>
                    <form action="{{ path('login') }}" method="post" class="login-form">
                        <div class="form-group">
                            <label for="username">Nom d'utilisateur</label>
                            <input id="username" name="_username" class="form-control">

                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" id="password" name="_password" class="form-control">
                        </div>

                        <div class="form-check">
                            <button type="submit" class="btn btn-primary">Se connecter</button><br><br>
                            <em>Si vous n'avez pas de compte, vous pouvez en créer un ici: <a href="{{ path('register') }}">Créer un comtpe</a></em>
                        </div>

                    </form>
                </div>
                <div class="col-md-8 banner-sec">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active">
                                <img class="d-block img-fluid" src="img/x.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block img-fluid" src="img/y.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block img-fluid" src="img/w.jpg" alt="First slide">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
    </section>
{% endblock %}